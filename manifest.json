{
  "name": "@deskpro-apps/people-hr",
  "title": "PeopleHR App",
  "description": "My Deskpro app",
  "version": "0.0.2",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{ "target": "user_sidebar", "entrypoint": "index.html" }],
  "settings": {
    "api_key": {
      "title": "API Key",
      "description": "",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 10
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://api.peoplehr.net/.*",
        "methods": ["POST"],
        "timeout": 20
      }
    ]
  }
}
